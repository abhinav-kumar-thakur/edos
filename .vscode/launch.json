    "version": "0.2.0",
    "configurations": [
        {
            "name": "Classifier",
            "type": "python",
            "request": "launch",
            "program": "${cwd}/src/runner/classify.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${cwd}"
            },
            "args": ["--config", "local.json", "--device", "cuda:2"]
        },
        {
            "name": "Generate Submission",
            "type": "python",
            "request": "launch",
            "program": "${cwd}/src/runner/generate_submission.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${cwd}"
            },
            "args": ["--config", "bert.json", "--device", "cuda:0"]
        },
        {
            "name": "Pretrainer",
            "type": "python",
            "request": "launch",
            "program": "${cwd}/src/strategies/bert_pretrain.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${cwd}"
            },
            "args": ["--config", "configs/bert_pretrain.json"]
        }
    ]
}
